[Unit]
Description=FQDN Security Scanner Web UI
After=network.target

[Service]
Type=simple
User=azureuser
WorkingDirectory=/home/azureuser/.openclaw/workspace/fqdn-security-scanner
Environment="PATH=/home/azureuser/.openclaw/workspace/fqdn-security-scanner/venv/bin"
ExecStart=/home/azureuser/.openclaw/workspace/fqdn-security-scanner/venv/bin/gunicorn -w 1 --threads 4 -b 127.0.0.1:5000 web.app:app
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
